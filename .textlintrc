{
  "filters": {},
  "rules": {
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 800
      },
      "max-kanji-continuous-len": {
        "max": 7,
        "allow": [
          "倍精度浮動小数点数",
          "出力特性測定回路",
          "定数係数線形微分方程式",
          "増補改訂版図説電子",
          "入力開放電圧帰還率",
          "出力短絡電流増幅率",
          "電圧電流帰還回路"
        ]
      },
      "max-comma": {
        "max": 10
      },
      "ja-no-mixed-period": {
        "periodMark": [
          ".",
          ",",
          "}",
          "$",
          "真理値表",
          "スイッチパターン"
        ]
      },
      "no-doubled-joshi": {
        "allow": [
          "に",
          "で",
          "も",
          "や"
        ],
        "separatorChars": [
          "。",
          ".",
          "?",
          "!",
          "？",
          "！"
        ]
      }
    },
    "spellcheck-tech-word": true,
    "prh": {
      "rulePaths": [
        "prhs/myprh.yml",
        "prhs/prh.yml/ja/jser-info.yml",
        "prhs/prh.yml/ja/kanji-open.yml",
        "prhs/prh.yml/ja/spoken.yml",
        "prhs/prh.yml/ja/typo.yml",
        "prhs/prh.yml/ja/web+db.yml"
      ]
    }
  }
}
